<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/user_img" />

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/vector_bookmark" />

        <TextView
            android:id="@+id/workoutLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Workout"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ptsans_regular" />

        <TextView
            android:id="@+id/forYouLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="For You"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ptsans_regular" />

        <TextView
            android:id="@+id/browseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="-30dp"
            android:text="Browse"
            android:padding="5dp"
            android:textSize="16sp"
            android:fontFamily="@font/ptsans_regular" />

        <TextView
            android:id="@+id/collectionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            android:layout_marginTop="-30dp"
            android:text="Collections"
            android:padding="5dp"
            android:textSize="16sp"
            android:fontFamily="@font/ptsans_regular" />

        <TextView
            android:id="@+id/plansLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="285dp"
            android:layout_marginTop="-30dp"
            android:text="Plans"
            android:padding="5dp"
            android:textSize="16sp"
            android:fontFamily="@font/ptsans_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" />

    </LinearLayout>

</RelativeLayout>
