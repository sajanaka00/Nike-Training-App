<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="85dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/circle" />

        <TextView
            android:id="@+id/feedLabel"
            android:text="Feed"
            android:padding="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptsans_regular" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/feedLabel"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/grey"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/contentBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:textSize="19sp"
                android:hint="NO NEW STORIES"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:background="@drawable/border_link"
                android:fontFamily="@font/archivo_narrow_regular" />

            <EditText
                android:id="@+id/contentLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_link"
                android:fontFamily="@font/notosansjp_light"
                android:hint="Find and connect with friends to see what theyâ€™re up to and cheer each other on during runs and workouts."
                android:lineSpacingExtra="3sp"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/black"
                android:text="ADD FRIENDS"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
