<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/user_img" />

        <TextView
            android:id="@+id/feedLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:padding="5dp"
            android:text="Feed"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ptsans_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@color/grey"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/contentBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:textSize="18sp"
                android:hint="NO NEW STORIES"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:background="@drawable/content_border"
                android:fontFamily="@font/archivo_narrow_regular" />

            <TextView
                android:id="@+id/contentLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:hint="Find and connect with friends to see what theyâ€™re up to and cheer each other on during runs and workouts."
                android:textSize="14sp"
                android:textAlignment="center"
                android:lineSpacingExtra="3sp"
                android:textColorHint="@color/black"
                android:background="@drawable/content_border"
                android:fontFamily="@font/notosansjp_light" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="ADD FRIENDS"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@color/black" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
