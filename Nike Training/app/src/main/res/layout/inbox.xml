<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/circle" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:text="Inbox"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/ptsans_regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:background="@color/grey"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/contentBold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/border_link"
            android:hint="NO MESSAGES YET"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/archivo_narrow_regular" />

        <EditText
            android:id="@+id/contentLight"
            android:layout_width="285dp"
            android:layout_height="75dp"
            android:background="@drawable/border_link"
            android:hint="Messages and notifications from Nike will show up here."
            android:textSize="14sp"
            android:lineSpacingExtra="3sp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:fontFamily="@font/notosansjp_light" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation" />

</LinearLayout>