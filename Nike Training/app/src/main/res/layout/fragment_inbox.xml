<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/user_img" />

        <TextView
            android:id="@+id/inboxLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="Inbox"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ptsans_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/inboxLabel"
            android:orientation="vertical"
            android:background="@color/lightGrey"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/contentDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:textSize="18sp"
                android:hint="NO MESSAGES YET"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:background="@drawable/content_no_border"
                android:fontFamily="@font/archivo_narrow_regular" />

            <EditText
                android:id="@+id/contentLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:hint="@string/contentLight_inbox"
                android:textSize="14sp"
                android:textAlignment="center"
                android:lineSpacingExtra="3sp"
                android:textColorHint="@color/black"
                android:background="@drawable/content_no_border"
                android:fontFamily="@font/notosansjp_light" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
