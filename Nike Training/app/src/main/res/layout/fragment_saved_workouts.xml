<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentContainerSavedWorkouts"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/titleAddActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/arrowBackwards"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:background="@drawable/vector_arrow_backward"/>

            <TextView
                android:id="@+id/addActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Saved Workouts"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/archivo_narrow_regular" />

        </RelativeLayout>

        <TextView
            android:id="@+id/horLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/contentBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/content_no_border"
                android:fontFamily="@font/archivo_narrow_regular"
                android:hint="ADD WORKOUTS"
                android:layout_marginTop="175dp"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contentLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="55dp"
                android:hint="@string/contentLight_saved_workout"
                android:textSize="14sp"
                android:textAlignment="center"
                android:lineSpacingExtra="3sp"
                android:textColorHint="@color/black"
                android:background="@drawable/content_no_border"
                android:fontFamily="@font/notosansjp_light" />

            <Button
                android:id="@+id/addFriendsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="EXPLORE WORKOUTS"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@color/black" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>