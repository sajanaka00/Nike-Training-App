<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="45dp"
        android:layout_height="18dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/nike" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="YOUR ACCOUNT FOR EVERYTHING NIKE"
            android:textColor="#000000"
            android:textSize="26sp"
            android:fontFamily="@font/anton_regular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Email address"
            android:inputType="textPersonName"
            android:padding="7.5dp"
            android:textSize="16sp"
            android:background="@drawable/border"
            android:textColorHint="@color/darkGrey" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="7.5dp"
            android:textSize="16sp"
            android:background="@drawable/border"
            android:textColorHint="@color/darkGrey" />

        <EditText
            android:id="@+id/forgetPassword"
            android:hint="Forgotten your password?"
            android:padding="5dp"
            android:textSize="14sp"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:paddingStart="130dp"
            android:layout_marginTop="10px"
            android:background="@drawable/border_link" />

        <EditText
            android:id="@+id/termsAndConditions"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25px"
            android:background="@drawable/border_link"
            android:hint="By logging in, you agree to Nike's Privacy Policy and Terms of Use."
            android:lineSpacingExtra="5sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColorHint="@color/darkGrey"
            android:textSize="12.5sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="75px"
            android:background="@color/black"
            android:text="SIGN IN"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/joinUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35px"
            android:background="@drawable/border_link"
            android:hint="Not a member? Join Us."
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColorHint="@color/darkGrey" />

    </LinearLayout>

</LinearLayout>